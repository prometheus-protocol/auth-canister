{
  "name": "@prometheus-protocol/prometheus-protocol",
  "version": "0.1.0",
  "keywords": [
    "MCP",
    "MCP Server",
    "MCP Protocol",
    "IC",
    "Internet Computer Protocol",
    "Internet Computer",
    "Motoko",
    "JavaScript",
    "Canister"
  ],
  "private": true,
  "description": "The monorepo for the Prometheus Protocol, the trust layer for decentralized commerce on the Internet Computer.",
  "scripts": {
    "dev": "DFX_NETWORK=local pnpm --filter @prometheus-protocol/frontend dev",
    "build": "pnpm --filter \"./packages/**\" build",
    "prebuild": "dfx generate",
    "deploy": "dfx deploy",
    "test": "vitest",
    "format": "prettier --write .",
    "bootstrap": "./scripts/set_frontend_canister_id.sh",
    "generate-auth-url": "node scripts/generate-auth-url.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
